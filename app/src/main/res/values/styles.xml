<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--                <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--                <item name="colorAccent">@color/colorAccent</item>-->
    </style>


    <!--    Figma Button Themes   -->
    <style name="ContainerForButton" parent="Widget.Design.ScrimInsetsFrameLayout">
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:background">@color/colorBgWhite</item>
    </style>

    <!--    Text style for Button Themes   -->
    <style name="TextButtons">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/sf_ui_text_semi_bold</item>
        <item name="fontFamily">@font/sf_ui_text_semi_bold</item>
    </style>

    <!--    Dynamic Button Themes   -->
    <style name="Material.PrimaryButton" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/btn_primary_background</item>
        <item name="android:textColor">@color/btn_primary_text</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAppearance">@style/TextButtons</item>
        <item name="android:state_activated">true</item>
        <item name="android:state_enabled">true</item>
        <item name="cornerRadius">8dp</item>
        <item name="textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="iconTint">@color/btn_primary_text</item>
    </style>

    <style name="Material.SecondaryButton" parent="Material.PrimaryButton">
        <item name="backgroundTint">@color/btn_secondary_background</item>
        <item name="android:textColor">@color/btn_secondary_text</item>
        <item name="iconTint">@color/btn_secondary_text</item>
    </style>

    <!--    Static Button Themes   -->
    <style name="Material.PrimaryButton.EnabledPermanent" parent="Material.PrimaryButton">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhiteText</item>
        <item name="iconTint">@color/colorWhiteText</item>
    </style>

    <style name="Material.PrimaryButton.DisabledPermanent" parent="Material.PrimaryButton">
        <item name="backgroundTint">@color/colorPlaceholderText</item>
        <item name="android:textColor">@color/colorWhiteText</item>
        <item name="iconTint">@color/colorWhiteText</item>
    </style>

    <style name="Material.SecondaryButton.EnabledPermanent" parent="Material.PrimaryButton">
        <item name="backgroundTint">@color/colorBgSecondary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="iconTint">@color/colorPrimary</item>
    </style>

    <style name="Material.SecondaryButton.DisabledPermanent" parent="Material.PrimaryButton">
        <item name="backgroundTint">@color/colorBgSecondary</item>
        <item name="android:textColor">@color/colorPlaceholderText</item>
        <item name="iconTint">@color/colorPlaceholderText</item>
    </style>


</resources>